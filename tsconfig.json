{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@confluence-pages/*": ["confluence-pages/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es2020", "dom"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noImplicitAny": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "target": "ES2020",
    "types": ["vite/client"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}
